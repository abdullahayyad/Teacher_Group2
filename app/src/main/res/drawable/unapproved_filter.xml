<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"></corners>
            <stroke android:color="@android:color/darker_gray" android:width="2dp"></stroke>
            <solid android:color="@color/gray"></solid>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <corners android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"></corners>
            <stroke android:color="@android:color/darker_gray" android:width="4dp"></stroke>
            <solid android:color="@color/gray"></solid>
        </shape>
    </item>
</selector>
